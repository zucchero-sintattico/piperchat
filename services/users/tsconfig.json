{
	"compilerOptions": {
		// JS Version
		"target": "ES6",
		"module": "commonjs",
		"moduleResolution": "node",
		// Compile options
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		// Type options
		"strict": true,
		// Module resolution
		"esModuleInterop": true,

		"rootDir": ".",
		"baseUrl": ".",
		"outDir": "./dist",
		"paths": {
			// Project-specific paths
			"@controllers/*": ["src/controllers/*"],
			"@events/*": ["src/events/*"],
			"@models/*": ["src/models/*"],
			"@repositories/*": ["src/repositories/*"],
			"@routes/*": ["src/routes/*"],
			// Commons paths
			"@commons/*": ["node_modules/commons/dist/*"]
		}
	},
	"include": ["src/**/*"]
}

